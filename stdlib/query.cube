import sorting
import each as default

class Query
{
    var data;
    
    func init(data)
    {
        if(data is not list)
            throw("Query data must be a list, '{}' given.".format(type(data)))
        else
            this.data = data
    }

    func [](i)
    {
        return data[i];
    }

    func len()
    {
        return len(data);
    }

    func list()
    {
        return this.data;
    }

    func select(fn)
    {
        var ndata = []
        for(var i in data)
        {
            ndata.add(fn(i))
        }
        return Query(ndata)
    }

    func where(fn)
    {
        var ndata = []
        var res;
        for(var i in data)
        {
            res = fn(i)
            if(res)
                ndata.add(i)
        }
        return Query(ndata)
    }

    func reverse()
    {
        var ndata = sorting.reverse(data)
        return Query(ndata)
    }

    func sort(fn)
    {
        var ndata = sorting.qsort(data, fn)
        return Query(ndata)
    }
}

func from(data)
{
    return Query(data)
}
